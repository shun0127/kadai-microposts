<%if favorites.any? %>
    <ul class="list-unstyled">
        <% favorites.each do |favorite| %>
        <li class="media mb-3">
            <img class="mr-2 rounded" src="<%= gravatar_url(favorite.user,{size: 50}) %>" alt="">
            <div class="media-body">
                <div>
                    <%= link_to User.find(favorite.micropost.user_id).name, user_path(User.find(favorite.micropost.user_id)) %> <span class="text-muted">posted at <%= favorite.created_at %></span>
                </div>
                <div>
                    <p class="mb-0"><%= favorite.micropost.content %></p>
                </div>
                <div>
                    <% if current_user == favorite.user %>
                        <% call_favorite_from = "from_favorites_list" %> 
                        <%= render "favorites/favorites_button", favorite: favorite.micropost, call_favorite_from: call_favorite_from %>
                    <% end %>
                </div>
            </div>
        </li>
        <% end %>
        <%= paginate favorites %>
    </ul>
<% end %>